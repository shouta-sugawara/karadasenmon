<tr>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <td><%= user.id %></td>
  <td>
    <%= form_tag "/admin/users/#{user.id}", method: :put, class: 'form-inline' do %>
      <%= text_field :user, :name, value: user.name, class: "form-control input-sm" %>
      <%= submit_tag "変更", class: 'btn btn-sm btn-warning' %>
    <% end %>
  </td>
  <td><%= link_to '削除', "/admin/users/#{user.id}", method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "本当に削除しますか？"} %></td>
</tr>
